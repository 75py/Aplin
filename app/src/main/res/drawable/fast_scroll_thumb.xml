<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:width="@dimen/fastscroll_thickness" android:gravity="end">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/fastscroll_radius" />
                    <solid android:color="@color/thumb_pressed" />
                </shape>
            </item>
            <item android:width="@dimen/fastscroll_thickness_touchable">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:width="@dimen/fastscroll_thickness" android:gravity="end">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/thumb" />
                </shape>
            </item>
            <item android:width="@dimen/fastscroll_thickness_touchable">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
