<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorQuaternary</item>
        <item name="android:colorControlHighlight">@color/colorQuinary</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>

        <item name="android:scrollbarThumbVertical">@drawable/fast_scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/fast_scroll_track_drawable</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/fast_scroll_thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/fast_scroll_track_drawable</item>

        <item name="android:dropDownListViewStyle">@style/ToolBarSpinner</item>
        <item name="dropDownListViewStyle">@style/ToolBarSpinner</item>
    </style>

    <style name="OverflowMenuButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more</item>
    </style>

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/textColorTertiary</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:paddingLeft">@dimen/unit_4</item>
        <item name="android:paddingRight">@dimen/unit_4</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/unit_4</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="android:colorControlHighlight">@color/colorQuaternary</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ToolBarSpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:listSelector">@color/colorBackground</item>
        <item name="android:background">@null</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider</item>
    </style>

    <string name="recycler_view_layoutManager">android.support.v7.widget.LinearLayoutManager</string>
    <integer name="recycler_view_spanCount">1</integer>

</resources>
