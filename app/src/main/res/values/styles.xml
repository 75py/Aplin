<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorEdgeEffect">@color/colorQuaternary</item>-->
        <item name="colorControlHighlight">@color/colorQuinary</item>
        <item name="colorControlNormal">@color/colorTertiary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>

        <item name="android:dropDownListViewStyle">@style/ToolBarSpinner</item>
        <item name="dropDownListViewStyle">@style/ToolBarSpinner</item>
    </style>

    <style name="OverflowMenuButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more</item>
    </style>

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorQuaternary</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ToolBarSpinner" parent="ToolBarSpinner.Base">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ToolBarSpinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:listSelector">@color/colorBackground</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider</item>
    </style>

    <color name="navigation_icon_color">@android:color/white</color>

</resources>
