<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="appInfo"
            type="com.nagopy.android.aplin.loader.AppInfo" />
    </data>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_parent_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_narrow"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:longClickable="true"
        card_view:cardCornerRadius="@dimen/card_corner">

        <RelativeLayout
            android:id="@+id/list_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{appInfo.enabled ? @android:color/transparent : @color/disabledBackgroundColor}"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/margin_normal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_normal"
                android:contentDescription="icon"
                android:scaleType="fitCenter"
                tools:ignore="HardcodedText"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@{appInfo.label}"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@{appInfo.enabled ? @color/textColorPrimary : @color/textColorPrimaryDisabled}"
                tools:text="Aplin" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/label"
                android:layout_toEndOf="@+id/icon"
                android:gravity="bottom|end"
                android:text="@{appInfo.packageName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@{appInfo.enabled ? @color/textColorSecondary : @color/textColorSecondaryDisabled}"
                tools:text="com.nagopy.android.aplin" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
