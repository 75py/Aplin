<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.nagopy.android.aplin.view.preference.CategoryPreference />

    <PreferenceCategory android:title="@string/usage_stats_title">
        <Preference
            android:key="@string/usage_stats_key"
            android:title="@string/usage_stats_title" />
    </PreferenceCategory>

    <com.nagopy.android.aplin.view.preference.DisplayItemPreference />

    <com.nagopy.android.aplin.view.preference.SortPreference />

    <PreferenceCategory android:title="@string/ga_preference_category">
        <CheckBoxPreference
            android:key="@string/ga_preference_key"
            android:summary="@string/ga_preference_summary"
            android:title="@string/ga_preference_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about">
        <Preference
            android:summary="@string/version_name"
            android:title="@string/version_title" />

        <Preference
            android:summary="@string/source_code_url"
            android:title="@string/source_code_title">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/source_code_url" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
